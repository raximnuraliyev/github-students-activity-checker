{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=github_activity_monitor;Username=postgres;Password=postgres"
  },
  "GitHub": {
    "PersonalAccessToken": "",
    "BatchSize": 50,
    "DelayBetweenBatchesMs": 5000
  },
  "Telegram": {
    "BotToken": "",
    "AuthorizedChatIds": []
  },
  "InactivityPolicy": {
    "InactiveDays": 30,
    "PendingRemovalDays": 60
  },
  "SyncSchedule": {
    "CronExpression": "0 0 2 * * ?"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Quartz": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/github-activity-monitor-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ]
  }
}
